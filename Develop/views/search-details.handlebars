
  <div class="game-container" style="height: 100vh; margin: 20px; padding-top: 30px;">
      <div class="game-details" data-game="{{stringify game}}">
      <h1 style="font-size: 50px; padding-bottom: 20px; line-height: 64px;">{{ game.name }}</h1>
      <h4 style="color: #D4FF00;">Add This Game to:</h4>
      <div class="buttons-container" style="padding-bottom: 20px;">
        <button class="w-20 btn btn-sm btn-primary new-game-in-progress"  data-gamestatus=1 type="submit" style="background-color:#007DC3; margin-right: 10px; margin-bottom: 10px; margin-top: 10px;"><img src="/img/bolt.png" width="10px;"></img>&nbsp;&nbsp;In Progress</button>
        <button class="w-20 btn btn-sm btn-primary new-game-completed" data-gamestatus=2  type="submit" style="background-color:#007DC3; margin: 10px;"><img src="/img/trophy.png" width="15px;"></img>&nbsp;&nbsp;Completed</button>
        <button class="w-20 btn btn-sm btn-primary new-game-not-started" data-gamestatus=3  type="submit" style="background-color:#007DC3; margin: 10px;"><img src="/img/diamond.png" width="15px;"></img>&nbsp;&nbsp;Not Started</button>
      </div>
      <h4>Description:</h4>
      <p style="font-size:14px; line-height: 22px;">{{game.description_raw}}</p>
      <div class="game-details-column-container">
        <div class="game-details-column1">
          <p><strong style="font-size: 20px;">Released:</strong>&nbsp;{{game.released}}</p>
          <p><strong style="font-size: 20px;">Tags(s):</strong>&nbsp;{{game.tags.0.name}}</p>
          <p><strong style="font-size: 20px;">Genre(s):</strong>&nbsp;{{game.genres.0.name}}</p>
          <p><strong style="font-size: 20px;">Metacritic Score:</strong>&nbsp;{{game.metacritic}}</p>
        </div>
        <div class="game-details-column2">
          <p><strong style="font-size: 20px;">Platform(s):</strong>&nbsp;{{game.platforms.0.platform.name}}</p>
          <p><strong style="font-size: 20px;">Developer(s):</strong>&nbsp;{{game.developers.0.name}}</p>
          <p><strong style="font-size: 20px;">Publisher(s):</strong>&nbsp;{{game.publishers.0.name}}</p>
          <p><strong style="font-size: 20px;">ESRB Rating:</strong>&nbsp;{{game.esrb_rating.name}}</p>
        </div>
      </div>
    </div>
    <div class="game-details-image">
      <img src="{{game.background_image}}" img id="myImg" width="350px" alt="{{game.name}}" style="border-radius: 5px; border: 3px solid #D4FF00;"></img>
      <!-- The Modal -->
      <div id="myModal" class="modal">

        <!-- The Close Button -->
        <span class="close">&times;</span>

        <!-- Modal Content (The Image) -->
        <img class="modal-content" id="img01">

        <!-- Modal Caption (Image Text) -->
        <div id="caption">Artwork of {{game.name}}</div>
      </div>
      <p style="padding-top: 20px; color:#007DC3;"><a href="{{ game.website }}" target="_blank">{{ game.website }}</a></p>
    </div>
</div>


<script src="/js/lightbox.js"></script>
<script src="/js/savegame.js"></script>

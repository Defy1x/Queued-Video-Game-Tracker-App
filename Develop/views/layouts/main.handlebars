        </div>
      {{/if}} -->
      <h3 style="padding-bottom:10px; margin: none; text-align: left;">Explore Games</h3>
      {{#if logged_in}}
      <div class="form-container" style="text-align: left;">
        <form id="game-form" name="game-form">
          <input type="text" id="game-name" placeholder="Search for a Game" style="color:#000; border-radius: 5px; border: 0px; padding: 10px; width: 200px;">
          <input type="submit" name="search-btn" id="search-btn">
        </form>
      </div>
      {{/if}}
      <hr>
      <ul class="nav nav-pills flex-column mb-auto">
        <h3 style="text-align: left;">My Libraries</h3>
        {{#if logged_in}}
        <li class="nav-item" style="text-align: left;">
          <a href="/library/progress/1" class="nav-link text-white" aria-current="page">
            <img style ="margin-right: 15px;" src="/img/bolt.png" width="10px;"></img>In Progress
          </a>
        </li>
        <li style="text-align: left;">
          <a href="/library/completed/2" class="nav-link text-white">
            <img style ="margin-right: 10px;" src="/img/trophy.png" width="15px;">Completed
          </a>
        </li>
        <li style="text-align: left;">
          <a href="/library/notstarted/3" class="nav-link text-white">
            <img style ="margin-right: 6px;" src="/img/diamond.png" width="15px;"> Not Started
          </a>
        </li>
      {{/if}}
      <hr>
      </ul>
      {{#if logged_in}}
      <h3 style="text-align: left;">My Account</h3>
      <hr>
      <div class="dropdown" style="padding-bottom: 20px;">
        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
          <img src="/img/doomslayer.png" alt="" width="50" height="50" class="rounded-circle me-2" style="border: 3px solid #D4FF00;">
          <strong>{{usersGames.game_creator.username}}</strong>
        </a>
        <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
          <li><a class="dropdown-item" href="https://uxfol.io/project/03c0ede6/Queu-ed--Video-Game-Tracker" target="_blank">About Queu(ed)</a></li>
          <li><hr class="dropdown-divider"></li>
          <li><a class="dropdown-item" id="logout" href="/signout">Sign out</a></li>
        </ul>
      </div>
      {{/if}}
    </div>
  </sidebar>

